polkit.addRule(function(action, subject) {
    if (action.id !== "org.freedesktop.policykit.exec")
        return;

    if (subject.user !== "xxx")
        return;

    var cmd = action.lookup("command_line") || "";

    if (
        cmd.startsWith("/usr/bin/openvpn") ||
        cmd.startsWith("/usr/bin/wg-quick") ||
        cmd.startsWith("/usr/bin/wg ") ||
        cmd.startsWith("/usr/bin/kill ")
    ) {
        return polkit.Result.YES;
    }
});
